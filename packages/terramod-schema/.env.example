# Terraform Schema Tools Configuration
# All paths are relative to the project root directory

# Path to providers.json (output from: terraform providers schema -json)
PROVIDERS_JSON_PATH=etc/providers/providers.json

# Directory to store downloaded provider documentation (Markdown files)
DOCS_OUTPUT_DIR=etc/docs/providers

# Directory to store generated YAML schema files
YAML_OUTPUT_DIR=output

# Terraform Registry API base URL (usually no need to change)
TERRAFORM_REGISTRY_API_URL=https://registry.terraform.io

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
